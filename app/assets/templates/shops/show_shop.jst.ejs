<div class="container-fluid level-two">
  <div class="row feed-header">
    <div class="col-md-7 col-xs-6 col-md-offset-1">
      <h1><em><%= shop.escape('name') %></em>
      </h1>
        <p class="lead"><%= shop.escape('phone') %><div class="shop rating" data-path="assets/images"></div></p>
    </div>
    <div class="shop-feature col-md-4">
      <br>
        <% if (mod_id == shop.escape('moderator_id')) { %>
          <div> <a class="shop-mod-buttons" href="#/shops/<%= shop.escape('id') %>/edit">EDIT YOUR SHOP</a></div>
          <div> <a class="shop-mod-buttons" href="#/shops/<%= shop.escape('id') %>/edit/barbers">ADD STAFF</a></div>
        <% } %>
        <br><br>
        <div><a href="#/shops/<%= shop.escape('id') %>/review/new"><button class="btn btn-default">WRITE A REVIEW</button></a></div>
        <div> <a href="#"><button style="color: crimson; margin-left: 10px;" class="btn btn-default">ALL SHOPS</button></a></div>
        <br><br>
    </div>
  </div>

 <div class="row">
    <div class="level-three col-xs-6 col-md-6">
      <div class="reviews-index">
        <ul class="review-items"></ul>
      </div>

    </div>


    <div class="side-container col-xs-6 col-md-5">
      <br>
      <div class="sidebar-header"><span class="barber-tooltip">VIEW A PORTFOLIO</span></div>
        <div class="side-column">
          <ul class="barber-container">
            <% barbers.each(function(barber) { %>
              <li class="barber-photo">
                <a href="/#/shops/<%= shop.escape('id') %>/barbers/<%= barber.escape('id') %>">
                  <span class="barber-name"><%= barber.escape('name') %></span>
                  <br>
                  <img class="barber-profile" src="<%= barber.escape('photo_url') %>">
                </a>
              </li>
            <% }); %>
          </ul>
        </div>
   </div>
</div>
