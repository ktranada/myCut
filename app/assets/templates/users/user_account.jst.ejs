<div class="row header col-md-8 col-md-offset-2">
  <div class="back">
    <a href="#"><i class="fa fa-long-arrow-left"></i></a>
  </div>
  <div class="user-account-information col-md-4 col-md-offset-1">
    <span class="user-username"><%= user.escape('username') %></span><br><br>
    <span class="user-email"><%= user.escape('email') %></span><br><br>

    <div class="user-avatar-container">
      <img src="<%= user.escape('photo_url') %>">
    </div>
    <br><br>
    <div class="row account-buttons">
      <span class="delete-account">DELETE</span>
      <span class="edit-account">EDIT</span>
    </div>
  </div>
  <div class="managed-shops col-md-6 col-md-offset-1">
    <div class="no-response-filler">
      <span class="no-owned-shops">You don't manage any shops... yet!</span><br>
    </div>
  </div>
</div>
