<% if flash[:errors] %>
  <div class="errors-container" role="alert">
    <ul>
      <% flash[:errors].each do |msg| %>
        <li style="
              list-style: none;
              text-align: center;
              text-transform: uppercase;"><em><%= msg %></em></li>
      <% end %>
    </ul>
  </div>
<% end %>
