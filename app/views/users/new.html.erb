<div class="container-fluid signup session-page">
  <div class="row">
    <div class="session-container col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
      <form action="/users" method="post" >
        <br>
        <div class="errors-container">
          <%= render "shared/errors"%>
        </div>
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <div class="form-group">
            <label class="si-input">USERNAME<br>
              <input type="text"
                     class="form-control"
                     placeholder=""
                     name="user[username]"
                     value="<%= @user.username %>">
            </label>
          </div>

          <div class="form-group">
            <label class="si-input" for="email-input">EMAIL<br>
            <input type="email"
                   class="form-control"
                   id="email-input"
                   name="user[email]"
                   value="<%= @user.email %>">
             </label>
          </div>
          <div class="form-group">
            <label class="si-input" for="email-password">PASSWORD<br>
            <input type="password"
                   class="form-control"
                   name="user[password]"
                   id="email-password">
             </label>
          </div>
          <button class="confirm"id="create-user">CREATE ACCOUNT</button>
          <br><br>
      </form>
      <a style="color:white;"href="/session/new">HAVE AN ACCOUNT? SIGN IN</a>
      <br><br>
    </div>
  </div>
</div>
